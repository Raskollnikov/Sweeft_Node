
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}


model Company {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  country     String
  industry    String
  token       String?  
  status      Status   @default(PENDING) 
  isActive    Boolean  @default(false) 
  createdAt   DateTime @default(now())
  
}

enum Status {
  PENDING
  ACTIVE
}
